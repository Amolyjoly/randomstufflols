<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Harga Emas Antam</title>
    <script>
        async function fetchGoldPrices() {
            try {
                const response = await fetch('https://logam-mulia-api.vercel.app/prices/hargaemas-com');
                const data = await response.json();

                const sellPrice = data.data[0].sell;
                const buyPrice = data.data[0].buy;

                document.getElementById('sellPrice').textContent = `Harga jual: ${sellPrice}`;
                document.getElementById('buyPrice').textContent = `Harga beli: ${buyPrice}`;
            } catch (error) {
                console.error('Error fetching data:', error);
                document.getElementById('sellPrice').textContent = 'Error fetching harga jual';
                document.getElementById('buyPrice').textContent = 'Error fetching harga beli';
            }
        }

        window.onload = fetchGoldPrices;
    </script>
</head>
<body>
    <h1>Harga Emas Mulia Antam</h1>
    <p id="sellPrice">Harga jual: Loading...</p>
    <p id="buyPrice">Harga beli: Loading...</p>
</body>
</html>
